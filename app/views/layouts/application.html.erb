<!DOCTYPE html>
<html>
  <head>
    <title>PerformerNow</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <% if controller_name == "pages" && action_name == "home" %>
      <%= render partial: "shared/navbar_white" %>
    <% elsif controller_name == "performers" && action_name == "index" %>
      <%= render partial: "shared/navbar_white" %>
    <% elsif controller_name == "registrations" && action_name == "new" %>
      <%= render partial: "shared/navbar_white" %>
    <% elsif controller_name == "sessions" && action_name == "new" %>
      <%= render partial: "shared/navbar_white" %>
    <% elsif controller_name == "bookings" && action_name == "index" %>
      <%= render partial: "shared/navbar_white" %>
    <% else %>
      <%= render partial: "shared/navbar_black" %>
    <% end %>
    <div style="min-height: 100vh">
      <%= yield %>
    </div>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </body>
</html>
