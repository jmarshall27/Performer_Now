
<div class="background-picture">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="behind_the_test">
          <h2 style="text-align: center; padding-top: 70px; font-family: 'Neuton'; font-size: 60px;">Login Page</h2>
          <br>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="container login_form">
              <div class="form-inputs" >
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email" } %>
                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password" } %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Log in", class: "login_form_submit"%>
              </div>
            <% end %>
            </div>
          <br>
            <p style="text-align: center; "><%= render "devise/shared/links" %></p>
        </div>
      </div>
    </div>
  </div>
  </div>

