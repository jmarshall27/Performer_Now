
<div class="home-container">
  <h1 style="text-align: center;">PerformerNow</h1>
  <div class="form_home">
    <h2 style="color: white;">Search for your Artist</h2>
    <%= simple_form_for :search, url: performers_path, method: :get do |f| %>
      <%= f.input :job_title %>
      <%= f.input :location %>
      <%= f.submit "Search", style: "background-color: blue; border-radius: 5px; color: white; border: none; padding: 5px 30px;"  %>
    <% end %>
  </div>
</div>
